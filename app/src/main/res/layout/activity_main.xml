<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnGetAccounts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onGetAccounts"
        android:text="Get Accounts" />

    <Button
        android:id="@+id/btnGeneToken"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="FetchTokenFromBackend"
        android:text="Get Token" />

    <Button
        android:id="@+id/btnPutToken"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onPutToken"
        android:text="Store Token" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TEST"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />
</LinearLayout>